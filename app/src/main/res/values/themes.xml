<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyKotlinApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->

        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
        <!-- Customize your theme here. -->
        <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
            <item name="android:textStyle">bold</item>

        </style>

        <style name="myFullscreenAlertDialogStyle" parent="Theme.AppCompat.Light.NoActionBar">
            <item name="colorAccent">@color/colorAccent</item>

        </style>

        <style name="BottomNavigationTheme" parent="Theme.AppCompat.Light">
            <item name="colorPrimary">@color/colorPrimary</item>
            <item name="android:textColorSecondary">@color/gray</item>
            <item name="android:textSize">8sp</item>
        </style>
        <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
            <item name="android:textSize">8sp</item>
        </style>

        <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
            <item name="android:textColor">@color/colorPrimary</item>
            <item name="android:textSize">11sp</item>
        </style>

</resources>